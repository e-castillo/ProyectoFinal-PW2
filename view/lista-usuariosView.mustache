{{> header}}

<section class="my-3">
    <h4 class="my-3">Todos los productos</h4>
    <table class="table text-center">
        <thead>
        <tr>
            <th scope="col">Usuario</th>
            <th scope="col">Nombre</th>
            <th scope="col">E-mail</th>
            <th scope="col">Rol</th>
            <th scope="col">Activo</th>
        </tr>
        </thead>
        <tbody>
        {{#usuarios}}
            <tr>
                <td>{{usuario}}</td>
                <td>{{nombre}}</td>
                <td>{{email}}</td>
                <form method="post" action="/infonet/usuario/modificarUsuario" >
                    <td><select class="form-select form-select-sm"  id="rol" name="rol">
                        <option value=""disabled> -Seleccione Rol-</option>
                        <option value="{{rol}}" > {{#rol}}{{userRol}}{{/rol}}{{^rol}}{{/rol}}</option>
                        {{#roles}}
                            <option value="{{id_rol}}" >{{descripcion}}</option>
                        {{/roles}}
                    </select>


                    </td>
                    <input type="hidden" class="form-control" name="id_usuario" id="id_usuario" value="{{id_usuario}}">
                    <td>

                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="activo" {{#activo}}checked{{/activo}}>
                        </div>

                    </td>
                    <td>
                        <button type="submit" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal">Actualizar</button>
                    </td>
                </form>
            </tr>
        {{/usuarios}}
        </tbody>
    </table>
</section>




{{> footer}}