{{> header}}
<section class="my-4">
    {{#edicion}}
        <h3>Especial edicion {{evento}}</h3>
        <span>Fecha {{fecha}}</span>
    {{/edicion}}
    <h5 class="my-3 text-center">Secciones</h5>
    <div class="row gap-5 flex-wrap justify-content-center my-5">
        {{#secciones}}
            <div class="card col-3" style="width: 18rem;">
                <img src="/infonet/public/home/seccion.jpg" class="card-img-top my-2" alt="seccion.jpg">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <p class="card-title">{{nombre}}</p>
                    <a href="/infonet/articulo/articuloPorSeccion/id={{id_seccion}}" class="btn btn-primary btn-radius">Ver articulos</a>
                </div>
            </div>
        {{/secciones}}
    </div>
</section>
{{> footer}}