            {{/activado}}
            {{#desactivado}}
                <p>Su cuenta no ha sido activada aun</p>
            {{/desactivado}}
        </div>

        <!-- Submit button -->
        <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary btn-radius my-4">Iniciar sesion</button>
        </div>

        <!-- Register buttons -->
    </form>
